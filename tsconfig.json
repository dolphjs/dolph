{
  "include": [
    "utilities/**/*",
    "common/**/*",
    "samples/**/*",
    "core/**/*",
    "decorators/**/*",
    "packages/**/*",
    "classes/**/*"
  ],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "allowJs": false,
    "declaration": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "useUnknownInCatchVariables": false,
    "esModuleInterop": true,
    "strictFunctionTypes": false,
    "emitDeclarationOnly": false,
    "emitDecoratorMetadata": true,
    "declarationMap": true,
    "target": "ES2022",
    "baseUrl": ".",
    "outDir": "dist",
    "pretty": true,
    "paths": {
      "@dolphjs/common": ["./common"],
      "@dolphjs/common/*": ["./common/*"],
      "@dolphjs/main": ["core"],
      "@dolphjs/main/*": ["core/*"],
      "@dolphjs/classes": ["classes"],
      "@dolphjs/classes/*": ["classes/*"],
      "@dolphjs/decorators": ["decorators"],
      "@dolphjs/decorators/*": ["decorators/*"],
      "@dolphjs/packages": ["packages"],
      "@dolphjs/packages/*": ["packages/*"],
      "@dolphjs/utilities": ["utilities"],
      "@dolphjs/utilities/*": ["utilities/*"]
    },
    "moduleResolution": "nodenext",
    "module": "nodenext"
  }
}
