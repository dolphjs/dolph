{
  "include": ["lib/**/*", "index.js", "utils/**/*", "config/**/*", "common/**/*", "samples/**/*"],
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "strictFunctionTypes": false,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "target": "ES2022",
    "baseUrl": "*",
    "pretty": true,
    "paths": {
      "@/*": ["*"],
      "@common/*": ["common/*"],
      "@samples/*": ["samples/*"]
    },
    "moduleResolution": "nodenext",
    "module": "nodenext"
  }
}
